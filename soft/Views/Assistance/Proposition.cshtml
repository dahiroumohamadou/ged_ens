<div class="row">
    <div class="col-md-9">
        <div class="widget p-4">
            <form asp-action="Proposition">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id" />


                <div class="mb-2">
                    <ejs-dropdownlist id="membre" readonly="true" dataSource="@ViewBag.Membres" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Membre" floatLabelType="Always" ejs-for="MembreId">
                        <e-dropdownlist-fields value="Id" text="MembreInfo"></e-dropdownlist-fields>

                    </ejs-dropdownlist>

                </div>
                @*  <div class="mb-2">
                <ejs-dropdownlist id="membre" dataSource="types" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Types" floatLabelType="Always" ejs-for="Type">
                <e-dropdownlist-fields value="Type" text="type"></e-dropdownlist-fields>

                </ejs-dropdownlist>

                </div> *@
                <div class="mb-2">
                    <ejs-textbox multiline="true"  id="objet" placeholder="Objet" floatLabelType="Always" ejs-for="Objet"></ejs-textbox>
                    <span asp-validation-for="Objet" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <ejs-textbox multiline="true" id="proposition" placeholder="Proposition" floatLabelType="Always" ejs-for="Proposition"></ejs-textbox>
                    <span asp-validation-for="Proposition" class="text-danger"></span>
                </div>
                <div class="mb-2">

                    <ejs-numerictextbox id="montantP" placeholder="Montant Proposé" floatLabelType="Always" ejs-for="Montant"></ejs-numerictextbox>
                    <span asp-validation-for="Montant" class="text-danger"></span>
                </div>
               @*  <div class="mb-2">
                    <ejs-datepicker id="date" placeholder="Date" format="dd/MM/yyyy" floatLabelType="Always" ejs-for="Date"></ejs-datepicker>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div> *@
                <ejs-button id="submit" cssClass="e-success align-center" type="submit" content="submit"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa fa-university" fa-2xl aria-hidden="true"></i>
        </div>

    </div>
</div>

