@model soft.Models.Categorie

@{
    // ViewData["Title"] = "Create";
    ViewData["PageTitle"] = Model.Id == 0 ? "Create new categorie" : "Edit categorie";
}
<div class="row">
    <div class="col-md-9">
        <div class="widget p-4">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="mb-2">
                    <ejs-textbox id="libele" placeholder="Categorie" floatLabelType="Always"  ejs-for="libele"></ejs-textbox>
                    <span asp-validation-for="libele" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <ejs-numerictextbox id="MontantAdh" placeholder="Montant Adhesion" floatLabelType="Always" ejs-for="MontantAdhesion"></ejs-numerictextbox>
                    <span asp-validation-for="MontantAdhesion" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <ejs-numerictextbox id="MontantCot" placeholder="Montant Cotisation" floatLabelType="Always" ejs-for="MontantCotisation"></ejs-numerictextbox>
                    <span asp-validation-for="MontantCotisation" class="text-danger"></span>
                </div>
                <ejs-button id="submit" cssClass="e-success" type="submit" content="submit"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa fa-user" fa-2xl aria-hidden="true"></i>
        </div>

    </div>
</div>
