@model soft.Models.Paiement

@{
    // ViewData["Title"] = "Create";
    ViewData["PageTitle"] = Model.Id == 0 ? "Create new cotisation" : "Edit cotisation";
}
<div class="row">
    <div class="col-md-9">
        <div class="widget p-4">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="row widget">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <ejs-dropdownlist id="membre" dataSource="@ViewBag.Membres" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Membre" floatLabelType="Always" ejs-for="MembreId">
                                <e-dropdownlist-fields value="Id" text="MembreGetMontantCotisation"></e-dropdownlist-fields>

                            </ejs-dropdownlist>

                        </div>
                        <div class="mb-2">

                            <ejs-numerictextbox id="montantC" placeholder="Montant cotisation" floatLabelType="Always" ejs-for="Montant"></ejs-numerictextbox>
                            <span asp-validation-for="Montant" class="text-danger"></span>
                        </div> 
                        
                    </div>
                    <div class="col-md-6">
                        <div class="mb-2">
                            <ejs-dropdownlist id="periode" dataSource="@ViewBag.Periodes" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Periode" floatLabelType="Always" ejs-for="PeriodiciteId">
                                <e-dropdownlist-fields value="Id" text="PeriodeInfo"></e-dropdownlist-fields>

                            </ejs-dropdownlist>
                        </div>
                        <div class="mb-2">
                            <ejs-datepicker id="date" placeholder="Date" format="dd/MM/yyyy" floatLabelType="Always" ejs-for="datePaiement"></ejs-datepicker>
                            <span asp-validation-for="datePaiement" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <ejs-button id="submit" cssClass="e-success align-center" type="submit" content="submit"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa fa-university" fa-2xl aria-hidden="true"></i>
        </div>

    </div>
</div>
