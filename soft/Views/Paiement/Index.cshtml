<div class="row ">
    <div class="col-md-9 h-100 d-flex align-content-center justify-content-center">
        <ejs-grid id="Grid"
                  dataSource="@ViewBag.DataSource"
                  gridLines="None"
                  allowSorting="true"
                  allowPaging="true"
                  gridlines="None">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="MembreInfo" headerText="Membre" textAlign="Center"></e-grid-column>
                <e-grid-column field="PeriodeInfo" headerText="Periode" textAlign="Center"></e-grid-column>
                <e-grid-column field="Montant" headerText="Montant cotisation" textAlign="Center"></e-grid-column>
                <e-grid-column field="datePaiement" headerText="Date cotisation" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumTemplate" textAlign="Center"> </e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-md-3">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa fa-university" fa-2xl aria-hidden="true"></i>
        </div>
    </div>
</div>

<script id="actionColumTemplate" style="width:50px;" type="text/x-template">
    <div class="d-flex flex-row g-5 justify-content-start">
        <a class="btn btn-sm no-a-decoration btn-primary" href="/Paiement/AddOrEdit/${Id}" >
            <i class="fa-solid fa-pen fa-lg "></i>
         </a>|
         <a class="btn btn-sm no-a-decoration btn-outline-success" href="/Paiement/AddOrEdit/${Id}" >
            <i class="fa-solid fa-eye fa-lg"></i>
         </a> |
         <form action="/Paiement/Delete/${Id}" method="post">
    @Html.AntiForgeryToken()
             <buton type="submit" class="btn btn-sm btn-link btn-danger no-a-decoration"
             onclick="return confirm(&quot;sure to delete this record (${Id}) &quot;) ">
                <i class="fa-solid fa-trash fa-lg"></i>
            </buton>
         </form>
    </div>
</script>


